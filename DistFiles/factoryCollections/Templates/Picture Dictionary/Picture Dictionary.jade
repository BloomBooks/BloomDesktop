include ../../../jade/bloom-foundation-mixins

mixin bookVariable-topic(langCode, title)
    div(data-book='topic', lang=langCode)=title

//- generates a translationGroup with any classes on the internal div
mixin field-attributesOnChild
    - requireZeroArguments('field-attributesOnChild', arguments)
    .bloom-translationGroup
        block
        +editable(kLanguageForPrototypeOnly)(attributes=attributes)

doctype html

html
    head
        +metadata-standard()
        meta(name="SuitableForMakingShells", content="yes")
        meta(name='defaultNameForDerivedBooks', content='Picture Dictionary')
        meta(name='bloomBookId', content='7E5B8274-C7BD-4471-B54D-50CF09E4DA17')
        meta(name='pageTemplateSource', content='Picture Dictionary')
        meta(name='defaultMultilingualLevel', content='2')
        meta(name='experimental', content='true')
        title Picture Dictionary Template
        +stylesheet('previewMode.css')
        +stylesheet('basePage.css')
        +stylesheet('PictureDictionary.css')
    body
        #bloomDataDiv
            +bookVariable-title('en', 'Picture Dictionary')
            +bookVariable-title('tpi', 'Piksa Diksionari')
            +bookVariable-title('id', 'Kamus Bergambar')
            +bookVariable-topic('en', 'Dictionary')
            +bookVariable-topic('fr', 'Dictionnaire')
            +bookVariable-topic('id', 'Kamus')
            +bookVariable-topic('th', 'พจนานุกรม')
            +bookVariable-topic('es', 'Diccionario')
        .bloom-page.numberedPage.images6.A5Portrait.pictureDictionaryPage(data-page='extra')#7E5B8274-C7BD-4471-B54D-50CF09E4D888
            +field-attributesOnChild.domain.picturePageTitle-style
                label.placeholder The title
            +repeat(6)
                .wordAndPicture.bloom-draggable.bloom-resizable
                    +image
                    +field-attributesOnChild.wordsDiv.pictureCaption-style
                        label.placeholder lorem ipsum
