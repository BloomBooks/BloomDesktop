{
    "name": "bloom",
    "version": "4.6.0",
    "description": "Bloom Desktop",
    "main": "none",
    "sideEffects": false,
    "directories": {
        "test": "test"
    },
    "engines": {
        "node": "~12.14.0"
    },
    "scripts": {
        "test": "karma start --browsers Firefox  --single-run",
        "testWatch": "karma start --browsers Firefox",
        "testWatchChrome": "karma start --browsers Chrome",
        "teamcitytest": "karma start karma.conf.js --browsers Chrome --reporters teamcity --single-run",
        "//": {
            "build": "does a nice new clean build of the output/browser folder.",
            "watch": "compiles TS, Less, Pug, etc automatically. Doesn't handle all non-code things like 'build' does."
        },
        "buildBrandingFiles": "cpx \"branding/**/!(source)/*.{png,jpg,svg,css,json,htm}\" ../../output/browser/branding",
        "buildBrandingLess": "lessc-glob branding/**/*.less ../../output/browser/branding",
        "buildBrandings": "npm-run-all --parallel buildBrandingLess buildBrandingFiles ",
        "build": "gulp",
        "build-short": "gulp build-short",
        "build-prod": "gulp build-prod",
        "watchCode": "set NODE_ENV=debug&& webpack --watch",
        "watchBrandingFiles": "cpx \"branding/**/!(source)/*.{png,jpg,svg,css,json,htm}\" ../../output/browser/branding --watch",
        "// note: there is no less watcher that can supports globs such that you could say 'everything, minus node_modules. See BL-6270': ['./**/*.less', '!./node_modules/**/*.less']": "",
        "// ... once there is, we can replace all these existing scripts with a single call.": "",
        "watchBrandingLess": "less-watch-compiler branding ../../output/browser/branding",
        "// note: on linux the paths would have to be forward. See BL-6270": "",
        "watchTemplatesLess": "less-watch-compiler templates  ../../output/browser/templates",
        "watchBookEditLess": "less-watch-compiler bookEdit ../../output/browser/bookEdit",
        "watchBookLayoutLess": "less-watch-compiler bookLayout ../../output/browser/bookLayout",
        "watchPageChooserLess": "less-watch-compiler pageChooser ../../output/browser/pageChooser",
        "watchProblemDialogLess": "less-watch-compiler problemDialog ../../output/browser/problemDialog",
        "watch": "npm-run-all --parallel watchBrandingLess watchTemplatesLess watchBookEditLess watchBookLayoutLess watchBrandingFiles watchPageChooserLess watchProblemDialogLess watchCode",
        "gitSemiClean": "git clean -X --dry-run --exclude='!node_modules'",
        "gitSemiCleanForReal": "git clean -fX --exclude='!node_modules'",
        "tslint": "tslint --project tsconfig.json",
        "// use output/browser as the root of the storybook-provided server": "",
        "storybook": "start-storybook -s ../../output/browser",
        "// xmatter development": "",
        "// I haven't figured out how to generalize this to all pug, but it's a helpful template for future xmatter work": "",
        "abcpug": "pug templates/xMatter/ABC-Reader-XMatter/ABC-Reader-Xmatter.pug --pretty --watch -o ../../output/browser/templates/xMatter/ABC-Reader-XMatter --pretty",
        "abcdevicepug": "pug templates/xMatter/ABC-Reader-Device-XMatter/ABC-Reader-Device-Xmatter.pug --pretty --watch -o ../../output/browser/templates/xMatter/ABC-Reader-Device-XMatter --pretty",
        "watch-abc": "npm-run-all --parallel abcpug abcdevicepug watchTemplatesLess",
        "//Note: this does not *watch* the pug": "",
        "watch-kyrgyzstan": "npm-run-all --parallel watchBrandingFiles watchBrandingLess  watchTemplatesLess kyrgyzstanpug",
        "kyrgyzstanpug": "pug templates/xMatter/Kyrgyzstan2020-XMatter/Kyrgyzstan2020-Xmatter.pug --pretty --watch -o ../../output/browser/templates/xMatter/Kyrgyzstan2020-XMatter --pretty",
        "// Afghan xmatter development": "",
        "afghanpug": "pug templates/customXMatter/ --pretty --watch -o ../../output/browser/templates/customXMatter --pretty",
        "daripug": "pug templates/customXMatter/Dari-XMatter/ --pretty --watch -o ../../output/browser/templates/customXMatter/Dari-XMatter --pretty",
        "daridevicepug": "pug templates/customXMatter/Dari-Device-XMatter/ --pretty --watch -o ../../output/browser/templates/customXMatter/Dari-Device-XMatter --pretty",
        "pashtipug": "pug templates/customXMatter/Pashti-XMatter/ --pretty --watch -o ../../output/browser/templates/customXMatter/Pashti-XMatter --pretty",
        "pashtidevicepug": "pug templates/customXMatter/Pashti-Device-XMatter/ --pretty --watch -o ../../output/browser/templates/customXMatter/Pashti-Device-XMatter --pretty",
        "watch-afghan": "npm-run-all --parallel afghanpug daripug daridevicepug pashtipug pashtidevicepug watchTemplatesLess"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/BloomBooks"
    },
