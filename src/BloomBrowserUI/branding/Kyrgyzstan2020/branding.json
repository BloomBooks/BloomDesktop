{
    "presets": [
        {
            "data-book": "xmatter",
            "lang": "*",
            "content": "Kyrgyzstan2020",
            "condition": "always"
        },
        {
            "data-book": "outside-back-cover-branding-top-left-html",
            "lang": "*",
            "content": "<img  class='branding' src='Kyrgyzstan2020-{flavor}-USAID.png'/>",
            "condition": "always"
        },
        {
            "data-book": "outside-back-cover-branding-top-right-html",
            "lang": "*",
            "content": "<img  class='branding' src='Kyrgyzstan2020-{flavor}-government-seal.png'/>",
            "condition": "always"
        },
        {
            "data-book": "outside-back-cover-branding-bottom-html",
            "lang": "*",
            "content": "<div/>",
            "condition": "always"
        },
        {
            "data-book": "credits-page-branding-bottom-html",
            "lang": "en",
            "content": "<div lang='en' class='USAID'>This publication is made possible by the support of the American People through the United States Agency for International Development (USAID) under Contract No. 72011519C00004 IBE-KR. The content does not necessarily reflect the views of USAID or the U.S. Government.</div><img style='margin-top:1em' class='branding' src='Created with Bloom.svg'/>",
            "condition": "always"
        },
        {
            "data-book": "credits-page-branding-bottom-html",
            "lang": "ky",
            "content": "<div lang='ky' class='USAID'>Бул басылма АКШнын эл аралык өнүктүрүү боюнча агенттиги (USAID) аркылуу көрсөтүлгөн Америка элинин колдоосу менен түзүлдү. Басылманын мазмуну USAIDдин же АКШ Өкмөтүнүн пикирин милдеттүү түрдө чагылдырбайт.</div><img style='margin-top:1em' class='branding' src='Created with Bloom.svg'/>",
            "condition": "always"
        },
        {
            "data-book": "credits-page-branding-bottom-html",
            "lang": "ru",
            "content": "<div lang='ru' class='USAID'>This will be the disclaimer in Russian</div><img style='margin-top:1em' class='branding' src='Created with Bloom.svg'/>",
            "condition": "always"
        },
        {
            "data-book": "credits-page-branding-bottom-html",
            "lang": "uz",
            "content": "<div lang='uz' class='USAID'>This will be the disclaimer in Uzbek</div><img style='margin-top:1em' class='branding' src='Created with Bloom.svg'/>",
            "condition": "always"
        },
        {
            "data-book": "credits-page-branding-bottom-html",
            "lang": "tg",
            "content": "<div lang='ky' class='USAID'>This will be the disclaimer in Tajik</div><img style='margin-top:1em' class='branding' src='Created with Bloom.svg'/>",
            "condition": "always"
        },
        {
            // note it would make more sense for this to be part of the Kyrgyz xmatter, but at the moment we have no way of having an xmatter
            // define a data-book value.
            "data-book": "fullBleed",
            "lang": "*",
            "content": "true",
            "condition": "always"
        }
    ]
}
