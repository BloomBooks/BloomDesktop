doctype html
// PageChooserMain - .jade file is the primary source; .html file is generated from .jade file

include mixins/page-chooser-mixins

html
	head
		meta(charset='UTF-8')
		title Bloom Add Page Chooser Dialog
		+stylesheet('page-chooser.css')
		+stylesheet('../bookEdit/css/bloomDialog.css')
		+script('../lib/jquery.js')
		+script('../lib/jquery-ui.js')
		+script('js/page-chooser.js')
	body
		#mainContainer.bloomDialogContainer
			.templatePageDisplay
				// .templatesCaption Installed Templates (Currently unused)
				.outerCollectionContainer
					//- This DIV element will get cloned for each collection
					//- when we handle more than one collection of templates
					.collection
						.collectionCaption Default Pages
						.innerCollectionContainer
							//- This DIV element gets cloned for each page in the collection
							.templatePage
								.invisibleThumbCover
								iframe(src='').thumbnail
								.templatePageCaption Page Title
			#singlePagePreview
				#previewCaption
				iframe(src='blank-preview.htm', width=500, height=700, scrolling='no', frameborder='0')#preview
				#previewDescription
					.DescriptionHeader Description
					.DescriptionText