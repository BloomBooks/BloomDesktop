// Place your settings in this file to overwrite default and user settings.
// This can be checked in
{
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "*.map": true,
        "**/output": true
    },

    // Controls if the editor will insert spaces for tabs. Accepted values:  "auto", true, false. If set to "auto", the value will be guessed when a file is opened.
    "editor.detectIndentation": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "prettier.endOfLine": "auto",
    "files.eol": "auto",
    "typescript.tsdk": "./node_modules/typescript/lib",
    "workbench.colorCustomizations": {
        "statusBar.background": "#75416E",
        "statusBar.debuggingBackground": "#75416E",
        "statusBar.noFolderBackground": "#75416E",
        "statussBar.prominentBackground": "#D65649",
        "activityBar.background": "#2D2F18",
        "titleBar.activeBackground": "#3F4222",
        "titleBar.activeForeground": "#FBFBF8"
    },

    "cSpell.words": [
        "Affordance",
        "Andika",
        "bloomdraggable",
        "bloomlibrary",
        "bloompub",
        "Blorg",
        "Brandings",
        "comicaljs",
        "configr",
        "contentful",
        "Defn",
        "deshroud",
        "Divs",
        "draggables",
        "editables",
        "elevenlabs",
        "localizable",
        "nicescroll",
        "pixabay",
        "portafino",
        "qtip",
        "sillsdev",
        "Snappable",
        "tinycolor",
        "Winform",
        "Winforms",
        "xmatter"
    ],
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // Vitest extension settings for debugging from test panel
    "vitest.enable": true,
    "vitest.commandLine": "yarn vitest",
    "vitest.debugExclude": ["**/node_modules/**", "**/dist/**"],
    "vitest.include": ["./**/*{test,spec,Spec}.{js,ts,jsx,tsx}"],
    "vitest.exclude": [
        "**/node_modules/**",
        "**/dist/**",
        "**/cypress/**",
        "**/.{idea,git,cache,output,temp}/**",
        "**/{karma,rollup,webpack,vite,vitest,jest,ava,babel,nyc,cypress,tsup,build}.config.*",
        "**/react_components/component-tester/**",
        "**/*.uitest.{ts,tsx}"
    ]
}
